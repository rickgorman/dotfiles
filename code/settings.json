{
  "workbench.tree.indent": 15,
  "workbench.colorCustomizations": {
      "tree.indentGuidesStroke": "#4f5959",
      "editorRuler.foreground": "#ffffff0f",
      /* eslint error squiggles */
      "editorError.foreground": "#b3b3ffcf",
    
      /* eslint warning squggles */
      "editorWarning.foreground": "#ffc40090",
    
      /* eslint info squiggles */
      "editorInfo.foreground": "#35ffab90",

      /* active tab highlighting */
      // "tab.activeBorder": "#ff000080",
      // "tab.activeBorderTop": "#ff000080",
      "tab.unfocusedActiveBorder": "#000000",
      "tab.unfocusedActiveBorderTop": "#000000",
      "tab.activeBackground": "#009dffb7",
      "tab.unfocusedActiveBackground": "#fbfbfb26",
      "gitDecoration.modifiedResourceForeground": "#ffe080",
  },
  "gitlens.currentLine.enabled": false,
  "gitlens.codeLens.scopes": [],

  /* add vertical rulers */
  "editor.rulers": [
      {"column":   0, "color": "#5a5a5a20"}, // left boundary 12.5% opaque
      {"column":   2, "color": "#5a5a5a20"}, // tab stops are 12.5% opaque
      {"column":   4, "color": "#5a5a5a20"},
      {"column":   6, "color": "#5a5a5a20"},
      {"column":   8, "color": "#5a5a5a20"},
      {"column":  10, "color": "#5a5a5a20"},
      {"column":  80, "color": "#5a5a5a80"}, // right rule
      {"column": 120, "color": "#5a5a5a40"}  // extra right rule
  ],
  "editor.fontSize": 13,
  "editor.fontFamily": "Menlo",
  "editor.lineHeight": 1.34,
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "editor.linkedEditing": true,
  "editor.inlineSuggest.enabled": true,
  "editor.minimap.renderCharacters": false,
  "editor.minimap.enabled": false,

  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,

  "workbench.startupEditor": "none",
  "workbench.editor.untitled.hint": "hidden",

  "security.workspace.trust.untrustedFiles": "open",

  /* reduce the gutter width to the left of the line numbers */
  "editor.glyphMargin": false,
  "editor.lineDecorationsWidth": 0,

  "terminal.integrated.defaultLocation": "editor",
  "terminal.integrated.enableFileLinks": false,
  "terminal.integrated.scrollback": 100000,
  "diffEditor.ignoreTrimWhitespace": false,

  "git.autofetch": true,
  "git.confirmSync": false,

  /* sort editors (within a group) in the order they were opened */ 
  "explorer.openEditors.sortOrder": "editorOrder",

  /* Tailwind+Rails integration */
  "editor.quickSuggestions": {
    "strings": true
  },
  "files.associations": {
    "*.css": "tailwindcss",
    "*.html.erb": "erb",
  },
  "tailwindCSS.includeLanguages": {
    "javascript": "javascript",
    "html": "html",
    "erb": "html"
  },
  "tailwindCSS.emmetCompletions": true,
  "emmet.includeLanguages": {
    "*.html.erb": "html",
    "erb": "html"
  },

  /* FontAwesome integration */
  "fontAwesomeAutocomplete.enableElevatedSortPriority": true,
  "fontAwesomeAutocomplete.patterns": [
    "**/*.html",
    "**/*.erb",
  ],

  "workbench.editor.focusRecentEditorAfterClose": false,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.wrapTabs": true,
  "workbench.editor.showIcons": false,
  "workbench.editor.splitSizing": "split",
  "workbench.editor.tabCloseButton": "off",
  "git.allowForcePush": true,
  "emmet.useInlineCompletions": true,
  "editor.acceptSuggestionOnEnter": "off",

  /* git status in file explorer */
  "explorer.decorations.badges": true,
  "git.decorations.enabled": true,
  "telemetry.telemetryLevel": "off",

  /* macros */
  "macros.list": {
    // "moveActiveEditorNewGroupRight": [
    //   "workbench.action.splitEditorToRightGroup",
    //   "workbench.action.focusLeftGroup",
    //   "workbench.action.closeActiveEditor"
    // ],
    // "moveActiveEditorNewGroupLeft": [
    //   "workbench.action.newGroupLeft",
    //   "workbench.action.moveEditorToLeftGroup"
    // ]
  },
  "github.copilot.advanced": {
  
  },
  "github.copilot.enable": {
    "*": false,
    "yaml": false,
    "plaintext": false,
    "markdown": false
  }
}
