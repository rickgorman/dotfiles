{
  /* copilot stuff */
  "github.copilot.advanced": {
    "length": 500
  },
  "github.copilot.chat.codeGeneration.useInstructionFiles": true,
  "chat.instructionsFilesLocations": {
    "~/.code/rails-dev-instructions.txt": true
  },
  "github.copilot.enable": {
    "*": true,
    "markdown": true,
    "plaintext": true,
    "scminput": false,
    "yaml": true
  },
  "github.copilot.nextEditSuggestions.enabled": true,

  /* remove i18n hovers */
  "railsI18n.annotations": false,

  /* add vertical rulers */
  "editor.rulers": [
    { "column": 0, "color": "#5a5a5a20" }, // left boundary 12.5% opaque
    { "column": 2, "color": "#5a5a5a20" }, // tab stops are 12.5% opaque
    { "column": 4, "color": "#5a5a5a20" },
    { "column": 6, "color": "#5a5a5a20" },
    { "column": 8, "color": "#5a5a5a20" },
    { "column": 10, "color": "#5a5a5a20" },
    { "column": 80, "color": "#854e1380" }, // right rule
    { "column": 120, "color": "#5a5a5a40" } // extra right rule
  ],

  /* reduce the gutter width to the left of the line numbers */
  "editor.glyphMargin": false,
  "editor.lineDecorationsWidth": 0,

  /* sort editors (within a group) in the order they were opened */
  "explorer.openEditors.sortOrder": "editorOrder",

  /* Tailwind+Rails integration */
  "editor.quickSuggestions": {
    "strings": true
  },
  "files.associations": {
    "*.css": "tailwindcss",
    "*.local": "shellscript"
  },
  "[erb]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false
  },
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.includeLanguages": {
    "erb": "html",
    "html": "html",
    "javascript": "javascript"
  },
  "emmet.includeLanguages": {
    "*.html.erb": "html",
    "erb": "html"
  },

  /* don't autoformat ruby files on save */
  "[ruby]": {
    "editor.formatOnSave": false
  },
  "ruby.rubocop.onSave": true,

  /* FontAwesome integration */
  "fontAwesomeAutocomplete.enableElevatedSortPriority": true,
  "fontAwesomeAutocomplete.patterns": [
    "**/*.html",
    "**/*.erb"
  ],

  /* git status in file explorer */
  "explorer.decorations.badges": true,
  "git.decorations.enabled": true,

  /* disable telemetry */
  "telemetry.telemetryLevel": "off",

  /* macros */
  "macros.list": {},

  /* markdown stuff */
  "[markdown]": {
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 80
  },

  /* monospace font in commit message box */
  "scm.inputFontFamily": "Consolas",
  "scm.inputFontSize": 12.5,
  "git.useEditorToCommit": true,

  /* jumpy */
  "jumpy.fontFamily": "Menlo",
  "jumpy.fontSize": 13,

  /* source control ui */
  "git.openDiffOnClick": false,

  /* rspec test runner */
  "railsTestRunner.clearTerminal": true,
  "rubyTestExplorer.testFramework": "rspec",

  /* language-specific formatters */
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "accessibility.signals.diffLineDeleted": {
    "sound": "off"
  },
  "accessibility.signals.diffLineInserted": {
    "sound": "off"
  },
  "accessibility.signals.diffLineModified": {
    "sound": "off"
  },
  "coverage-gutters.coverageFileNames": [
    "coverage.json",
    "coverage/coverage.json",
    "lcov.info",
    "cov.xml",
    "coverage.xml",
    "cobertura.xml",
    "jacoco.xml",
    "coverage.cobertura.xml"
  ],
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.accessibilitySupport": "off",
  "editor.acceptSuggestionOnEnter": "off",
  "editor.detectIndentation": false,
  "editor.fontFamily": "Menlo",
  "editor.fontSize": 13.5,
  "editor.inlineSuggest.enabled": true,
  "editor.lineHeight": 1.34,
  "editor.minimap.enabled": false,
  "editor.minimap.renderCharacters": false,
  "editor.occurrencesHighlight": "multiFile",
  "editor.scrollbar.horizontalScrollbarSize": 8,
  "editor.scrollbar.verticalScrollbarSize": 8,
  "editor.semanticTokenColorCustomizations": {},
  "editor.stickyScroll.enabled": false,
  "editor.tabSize": 2,
  "emmet.useInlineCompletions": true,
  "explorer.compactFolders": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "files.trimTrailingWhitespace": true,
  "git.allowForcePush": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.showProgress": false,
  "git.suggestSmartCommit": false,
  "gitlens.codeLens.scopes": [],
  "gitlens.currentLine.enabled": false,
  "gitlens.launchpad.ignoredRepositories": [
    "kerrow/kerrow-web",
    "rickgorman/js-binary-sim",
    "rickgorman/trading-engine"
  ],
  "gitlens.views.commitDetails.files.layout": "tree",
  "githubPullRequests.pullBranch": "never",
  "inlineFold.unfoldOnLineSelect": true,
  "inlineFold.unfoldedOpacity": 1,
  "markdown.extension.toc.updateOnSave": false,
  "multiDiffEditor.experimental.enabled": true,
  "railsTestRunner.rspecCommand": "bundle exec rspec",
  "rubyLsp.enableExperimentalFeatures": true,
  "rubyLsp.enabledFeatures": {
    "codeActions": false,
    "codeLens": false,
    "completion": false,
    "definition": true,
    "diagnostics": false,
    "documentHighlights": true,
    "documentLink": true,
    "documentSymbols": true,
    "foldingRanges": true,
    "formatting": true,
    "hover": false,
    "inlayHint": false,
    "onTypeFormatting": false,
    "selectionRanges": true,
    "semanticHighlighting": true,
    "signatureHelp": false,
    "typeHierarchy": true,
    "workspaceSymbol": true
  },
  "rubyLsp.erbSupport": false,
  "rubyLsp.featuresConfiguration": {},
  "rubyLsp.formatter": "rubocop",
  "rubyLsp.rubyExecutablePath": "/Users/me/.asdf/shims/ruby",
  "rubyLsp.rubyVersionManager": {
    "asdfExecutablePath": "/Users/me/.asdf/shims/asdf",
    "identifier": "auto"
  },
  "search.defaultViewMode": "tree",
  "scm.showHistoryGraph": false,
  "scm.showIncomingChanges": "always",
  "scm.showOutgoingChanges": "always",
  "security.workspace.trust.untrustedFiles": "open",
  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.defaultLocation": "editor",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.enableFileLinks": "off",
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "terminal.integrated.fontFamily": "MesloLGS NF",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.profiles.osx": {
    "bash": {
      "args": ["-l"],
      "icon": "terminal-bash",
      "path": "bash"
    },
    "fish": {
      "args": ["-l"],
      "path": "fish"
    },
    "pwsh": {
      "icon": "terminal-powershell",
      "path": "pwsh"
    },
    "tmux": {
      "icon": "terminal-tmux",
      "path": "tmux"
    },
    "zsh": {
      "args": ["-l"],
      "path": "zsh"
    }
  },
  "terminal.integrated.scrollback": 100000,
  "workbench.activityBar.location": "hidden",
  "workbench.colorCustomizations": {
    /* copilot */
    "editorGhostText.border": "#33ff003f",
    "editorGhostText.foreground": "#33ff0032",

    /* editor vertical scrollbars */
    "gitDecoration.modifiedResourceForeground": "#ffe080",
    "scrollbarSlider.background": "#a87118c8",
    "statusBar.foreground": "#ffffff",

    /* make it super clear when a buffer is unsaved */
    "tab.activeBackground": "#009dffb7",
    "tab.activeModifiedBorder": "#ff0000",
    "tab.inactiveModifiedBorder": "#ff0000",
    "tab.unfocusedActiveBackground": "#fbfbfb26",
    "tab.unfocusedActiveBorder": "#000000",
    "tab.unfocusedActiveBorderTop": "#000000",
    "tree.indentGuidesStroke": "#4f5959",

    "editorError.foreground": "#b3b3ffcf",
    "editorInfo.foreground": "#35ffab90",
    "editorOverviewRuler.background": "#7f7f7f24",
    "editorOverviewRuler.border": "#413f4180",
    "editorRuler.foreground": "#ffffff0f",
  },
  "workbench.editor.empty.hint": "hidden",
  "workbench.editor.focusRecentEditorAfterClose": false,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.openPositioning": "last", /* open files in current group */
  "workbench.editor.revealIfOpen": false,     /* open a second copy of a file if it's already open */
  "workbench.editor.showIcons": false,
  "workbench.editor.splitSizing": "split",
  "workbench.editor.tabActionCloseVisibility": false,
  "workbench.editor.tabCloseButton": "off",
  "workbench.editor.wrapTabs": true,
  "workbench.fontAliasing": "auto",
  "workbench.startupEditor": "none",
  "workbench.tree.indent": 15,
  "zenMode.hideLineNumbers": false,
}
